package PuneethChidura.data;

import java.io.File;
import java.io.IOException;

import org.apache.commons.io.FileUtils;

import com.fasterxml.jackson.core.type.TypeReference;
import com.fasterxml.jackson.databind.ObjectMapper;

public class DataReader {

	public void getJsonDataToMap() throws IOException
	{
	  // reading json to string	
	String JsonContent	=  FileUtils.readFileToString(new File(System.getProperty("user.dir")+"\\src\\test\\java\\PuneethChidura\\data\\PurchaseOrder.json"));
	// string to hashmap using jackson data bind
	ObjectMapper mapper = new ObjectMapper();
	mapper.readValue(JsonContent, new TypeReference() {
	});
	
	}
}
